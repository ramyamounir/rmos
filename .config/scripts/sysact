#!/bin/sh

DMENU_OPTIONS=`dwm -m`

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª leave dwm\nğŸ» quit\nğŸ”ƒ reboot\nğŸ–¥ï¸ shutdown\n" | dmenu $DMENU_OPTIONS -i -p 'Action: ')" in
	'ğŸ”’ lock') slock ;;
	'ğŸšª leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ğŸ» quit') loginctl terminate-session $XDG_SESSION_ID ;;
	'ğŸ”ƒ reboot') $ctl reboot ;;
	'ğŸ–¥ï¸ shutdown') $ctl poweroff ;;
	*) exit 1 ;;
esac
